@model IEnumerable<TrendingViewModel>

<div class="weekly-wrapper">
    <!-- section Tittle -->
    <div class="row">
        <div class="col-lg-12">
            <div class="section-tittle mb-30">
                <h3>Bu həftənin ən çox oxunanları</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="weekly-news-active dot-style d-flex dot-style">
                @foreach (var item in Model)
                {

                    <div class="weekly-single">
                        <div class="weekly-img">
                            <img src="~/@item.CoverPhoto" width="360" height="420" alt="">
                        </div>
                        <div class="weekly-caption">
                            <span class="color1">@item.CategoryName</span>
                            <h4><a asp-controller="News" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></h4>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
