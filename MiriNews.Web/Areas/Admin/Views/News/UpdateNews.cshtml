@model UpdateNewsViewModel
@{
    ViewData["Title"] = "xəbəri readaktə et";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        @*<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>*@
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <form class="form-horizontal form-label-left" asp-controller="news" asp-action="updatenews" asp-area="Admin" method="post" enctype="multipart/form-data" novalidate="">

                    <span class="section">Xəbər Əlavə Et</span>

                    <div class="item form-group ">                        
                        <label>
                            Xəbərin başlığı
                        </label>
                        <div class="col-md-5 col-sm-5">
                            <input type="hidden" asp-for="AddedUserId" />
                            <input type="hidden" asp-for="Views" />
                            <input type="hidden" asp-for="Id" />
                             <span asp-validation-for="Title" class="text-danger"></span>
                            <input id="name" class="form-control" asp-for="Title" type="text">
                        </div>
                        <label>Xəbərin kateqoriyası</label>
                        <div class="col-md-5 col-sm-5">
                            <span asp-validation-for="catId" class="text-danger"></span>
                            <select class="form-control" asp-for="catId">
                                @foreach (var item in Model.Categories)
                                {

                                    <option value="@item.Id">@item.CategoryName</option>
                                }

                            </select>

                        </div>

                    </div>
                    <div class="item form-group ">
                        <label>Top rend?</label>
                        <div class="col-md-3 col-sm-3">
                            <input type="checkbox" asp-for="TopTrending" />
                        </div>

                    </div>
                    <div class="item form-group ">
                        <label>Buttom trend?</label>
                        <div class="col-md-3 col-sm-3">
                            <input type="checkbox" asp-for="ButtomTrending" />
                        </div>

                    </div>
                    <div class="item form-group ">
                        <label>Right content?</label>
                        <div class="col-md-3 col-sm-3">
                            <input type="checkbox" asp-for="RightContent" />
                        </div>

                    </div>
                    <div class="item form-group ">

                        <br />
                        <label>Başlıq şəkli</label>

                        <div class="col-md-3 col-sm-3">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                            <input type="file" asp-for="Photo" />
                        </div>

                    </div>

                    <div class="item form-group ">
                        <div class="col-md-12 col-sm-12">
                            <p>Xəbəri daxil edin</p>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                        </div>

                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 offset-md-3">
                            <button type="submit" class="btn btn-primary">Geriyə</button>
                            <button id="send" type="submit" class="btn btn-success">Yadda Saxla</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        $(document).ready(function () {
            CKEDITOR.replace('Description');
        });


    </script>

}


