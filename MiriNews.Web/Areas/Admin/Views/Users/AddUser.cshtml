@model AddUserViewModel
@{
    ViewData["Title"] = "istifadıçi əlavə et";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        @*<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>*@
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <form class="form-horizontal form-label-left" asp-controller="users" asp-action="adduser" asp-area="Admin" method="post" enctype="multipart/form-data" novalidate="">

                    <span class="section">Istifadəçi Əlavə Et</span>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label>
                        İstifadəçi adı:
                    </label>
                    <div class="item form-group ">

                        <div class="col-md-5 col-sm-5">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <input id="name" class="form-control" asp-for="UserName" type="text">
                        </div>
                    </div>
                    <label>
                        Ad:
                    </label>
                    <div class="item form-group ">

                        <div class="col-md-5 col-sm-5">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <input id="name" class="form-control" asp-for="FirstName" type="text">
                        </div>
                    </div>
                    <label>
                        Soyad:
                    </label>
                    <div class="item form-group ">

                        <div class="col-md-5 col-sm-5">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                            <input id="name" class="form-control" asp-for="LastName" type="text">
                        </div>
                    </div>
                    <label>
                        Email:
                    </label>
                    <div class="item form-group ">

                        <div class="col-md-5 col-sm-5">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input id="name" class="form-control" asp-for="Email" type="text">
                        </div>
                    </div>
                    <label>
                        Doğum tarixi:
                    </label>
                    <div class="item form-group ">

                        <div class="col-md-5 col-sm-5">
                            <span asp-validation-for="DateofBrith" class="text-danger"></span>
                            <input id="name" class="form-control" asp-for="DateofBrith" type="date">
                        </div>
                    </div>
                    <label>
                        Rol:
                    </label>
                    <div class="item form-group ">

                        <div class="col-md-5 col-sm-5">
                            <select class="form-control" asp-for="roleName">
                                @foreach (var item in Model.Roles)
                                {

                                    <option value="@item.Name">@item.Name</option>
                                }

                            </select>

                        </div>
                    </div>
                    <label>
                        Şifrə:
                    </label>
                    <div class="item form-group ">

                        <div class="col-md-5 col-sm-5">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input id="name" class="form-control" asp-for="Password" type="password">
                        </div>
                    </div>


                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 offset-md-3">
                            <button type="submit" class="btn btn-primary">Geriyə</button>
                            <button id="send" type="submit" class="btn btn-success">Yadda Saxla</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>